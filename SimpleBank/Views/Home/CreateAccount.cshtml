@model BankAccountViewModel
@{
    ViewData["Title"] = "Create Account";
    var items = (IEnumerable<BankUserViewModel>)ViewBag.BankUsers;
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="text-success">@ViewBag.Msg</div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="UserId">User : </label>
                    <select asp-for="UserId" class="form-control">
                        @foreach (var item in items)
                        {
                            <option value="@item.UserId">@item.FirstName @item.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="UserId" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Bank Account Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IBAN">IBAN No:</label>
                    <input asp-for="IBAN" class="form-control" />
                    <span asp-validation-for="IBAN" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
